{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "allowJs": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
